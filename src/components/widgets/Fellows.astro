---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  items = [],

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} classes={classes?.headline as Record<string, string>} />

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
    {
      items.map((item: any) => (
        <div class="flex flex-col items-center text-center group">
          <div class="relative mb-4">
            <div class="w-32 h-32 rounded-full overflow-hidden bg-gray-100 dark:bg-gray-800 ring-4 ring-gray-200 dark:ring-gray-700 group-hover:ring-blue-500 transition-all duration-300">
              {item.image ? (
                <img
                  src={item.image}
                  alt={item.name}
                  class="w-full h-full object-cover"
                />
              ) : (
                <div class="w-full h-full flex items-center justify-center text-4xl bg-blue-100 dark:bg-blue-900">
                  {item.name?.charAt(0) || '?'}
                </div>
              )}
            </div>
          </div>

          <h3 class="text-lg font-bold dark:text-white mb-1">{item.name}</h3>
          {item.title && (
            <p class="text-sm text-blue-600 dark:text-blue-400 font-medium mb-2">{item.title}</p>
          )}
          {item.description && (
            <p class="text-sm text-muted dark:text-gray-400 line-clamp-2">{item.description}</p>
          )}
          {item.link && (
            <a
              href={item.link}
              class="mt-3 text-sm text-blue-600 dark:text-blue-400 hover:underline"
              target={item.target || '_self'}
            >
              View profile â†’
            </a>
          )}
        </div>
      ))
    }
  </div>
</WidgetWrapper>
